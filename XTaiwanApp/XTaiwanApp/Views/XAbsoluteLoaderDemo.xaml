<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="XTaiwanApp.Views.XAbsoluteLoaderDemo">
    <ContentPage.Content>
        <AbsoluteLayout>
            <Image 
                Source="http://jeremecausing.com/wp-content/uploads/2016/11/Xamarin.jpg"
                AbsoluteLayout.LayoutBounds="0,0,1,1"
                Aspect="AspectFit"
                AbsoluteLayout.LayoutFlags="All"/>
            <BoxView 
                BackgroundColor="Black" 
                Opacity="0.6"
                AbsoluteLayout.LayoutBounds="0,0,1,1"
                AbsoluteLayout.LayoutFlags="All"/>
            <ActivityIndicator 
                Color="YellowGreen"
                IsRunning="True"
                AbsoluteLayout.LayoutBounds="0.5,0.5,0.1,0.1"
                AbsoluteLayout.LayoutFlags="All"/>
        </AbsoluteLayout>
    </ContentPage.Content>
</ContentPage>